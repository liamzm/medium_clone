

<h1> <%= @user.first_name %> <%= @user.last_name %> </h1>

<%= image_tag(@user.avatar_url(:thumb).to_s) %>

<p> <%= @user.first_name %> can be reached at <%= @user.email %> </p>


<h3> Articles written by <%= @user.first_name %> </h3>


<% if current_user != nil %>

	<% if current_user.id == @user.id || current_user.user_type == "admin" %>
	
		<p> <%= link_to 'Edit Profile', edit_user_path(@user), class: 'quick-link' %> </p>

	<% end %>

<% end %>


<% @articles.each do |x| %>

	<h3> <%= x.title %> </h3>

	<p> <%= x.subhead %> </p>

	<p> <%= link_to 'Read more', article_path(x) %> </p>

		<% if current_user != nil %>

		<% if x.user_id == current_user.id %>

			<p> <%= link_to 'Edit Article', edit_article_path(x) %> </p>

		<% end %>

	<% end %>

<% end %>