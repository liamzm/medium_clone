<!DOCTYPE html>
<html>
  <head>
    <title>Eatium</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>

    <link href="https://fonts.googleapis.com/css?family=Merriweather:300,900|Montserrat:400,700" rel="stylesheet">

<!--   <script src="https://code.jquery.com/jquery-1.10.2.js"></script> -->

  </head>

  <body>

  <!-- NAVBAR GOES HERE -->

  <div class="navbar">

    <div class="navbar-item">

    </div>

        <!--   SEARCH BAR -->

    <div class="navbar-item" id="search-bar">

      <%= form_tag search_results_path, method: :get do %>
        <input type="text" name="search" class = "search-form">
        <%= submit_tag 'Search', class: "navbar-text" %>
      <% end %>

      </div>



    <div class="navbar-item" id="site-title">

      <a href="/" class="headline">Eatium</a>
      <p class="tagline">For those who travel to eat</p>

    </div>

    <% if current_user %>

    <div class="navbar-item">

      <%= image_tag current_user.avatar_url(:thumb).to_s, class: "avatar"%>
      <a class="navbar-text" href="/users/<%= current_user.id %>/edit">Welcome, <strong><%= current_user.first_name %></strong></a>

    </div>
      
    <div class="navbar-item">
      
      <%= link_to "Log Out", session_path("logout"), method: "delete", class: "navbar-text" %>

    </div>

    <div class="navbar-item">

      <%= link_to "new post", new_article_path, class: "navbar-text" %>

    </div>

      <% else %>

    <div class="navbar-item">

      <%= link_to "Sign Up", new_user_path, class: 'navbar-text' %>

    </div>

    <div class="navbar-item">

      <%= link_to "Login", new_session_path, class: 'navbar-text' %>

    </div>

   <!--  Filler div to keep logo centered -->
    <div class="navbar-item">

    </div>

      <% end %>

    </div>

    <div class="filler"></div>

    <%= yield %>
  </body>
</html>
